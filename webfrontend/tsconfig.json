{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    // ✅ Output & declarations
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // ✅ Strict type checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // ✅ Module settings
    "isolatedModules": true,
    "skipLibCheck": true,

    // Optional stylistic checks
    // "noImplicitReturns": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true
  }
}
